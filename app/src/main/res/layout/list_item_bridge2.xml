<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/bridge_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Bridge Name"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bridge_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bridge Number"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_below="@id/bridge_card_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bridge_card_hostCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Host Code"
                android:gravity="center_vertical"
                android:textSize="10dp"
                android:layout_below="@id/bridge_card_number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>


            <TextView
                android:id="@+id/bridge_card_participantCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIN Code"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="150dp"
                android:layout_alignBaseline="@id/bridge_card_hostCode"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bridge_card_callButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/call_button"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <Button
                android:id="@+id/bridge_card_editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/call_button"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <Button
                android:id="@+id/bridge_card_shareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/share_button"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

</LinearLayout>