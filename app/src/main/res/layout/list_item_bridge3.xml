<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card">

    <TextView
    android:id="@+id/bridge_card_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:textColor="@android:color/white"
    android:gravity="center"
    android:text="Bridge Name"
    android:textSize="14dp"
    android:textStyle="bold"/>

    <View
        android:id="@+id/list_item_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/colorDivider" />

    <TextView
        android:id="@+id/bridge_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bridge Number"
        android:textSize="12dp"/>

    <View
        android:id="@+id/list_item_seperator2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bridge_card_participantCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PIN Code"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/bridge_card_hostCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Host Code"
            android:gravity="center"
            android:textSize="10dp"/>

    </LinearLayout>

    <View
        android:id="@+id/list_item_seperator3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/colorDivider" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bridge_card_callButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dip"
            android:text="@string/call_button"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="@color/colorPrimaryText"/>

        <Button
            android:id="@+id/bridge_card_editButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dip"
            android:text="@string/edit_button"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="@color/colorPrimaryText"/>

        <Button
            android:id="@+id/bridge_card_shareButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dip"
            android:text="@string/share_button"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="@color/colorPrimaryText"/>

    </LinearLayout>

</LinearLayout>