<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bridge_card"
        android:descendantFocusability="afterDescendants">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bridge_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bridge Name"
                android:textSize="24sp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <ImageView
                    android:id="@+id/bridge_card_overflow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/ic_more_vert_grey600_24dp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">


            <TextView
                android:id="@+id/bridge_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bridge Number"
                android:textSize="14sp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/bridge_card_participantCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PIN Code"
                android:textSize="14sp"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/bridge_card_hostCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Host Code"
                android:gravity="center"
                android:textSize="14sp"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/bridge_call_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Call Order"
                android:textSize="14sp"
                android:paddingLeft="16dp"
                android:textColor="@color/colorPrimaryText"/>

            </LinearLayout>





        <View
            android:id="@+id/list_item_separator"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDivider"/>

        <LinearLayout
            android:id="@+id/cardButtonBar"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null">


            <Button
                android:id="@+id/bridge_card_callButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_button"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="14sp"
                android:padding="16dp"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryText"/>

            <Button
                android:id="@+id/bridge_card_shareButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_button"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="14sp"
                android:padding="16dp"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>